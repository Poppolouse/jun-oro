{
  "name": "jun-oro",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "homepage": "https://jun-oro.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/Poppolouse/jun-oro.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:ci": "vitest --ci --coverage --watchAll=false",
    "test:unit": "vitest tests/unit",
    "test:integration": "vitest tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:codegen": "playwright codegen",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:coverage:report": "vitest --coverage --reporter=html --reporter=json --outputFile=tests/coverage/coverage.json",
    "test:coverage:threshold": "vitest --coverage --run --reporter=verbose",
    "test:coverage:analyze": "node scripts/test-coverage.js"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/src/pages/__tests__/SettingsPage.test.jsx"
    ]
  },
  "dependencies": {
    "howlongtobeat-api": "^1.0.3",
    "lucide-react": "^0.552.0",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.20.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/ui": "^4.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jsdom": "^27.1.0",
    "msw": "^2.0.0",
    "playwright": "^1.40.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "terser": "^5.44.1",
    "vite": "^4.5.0",
    "vitest": "^1.0.0"
  }
}

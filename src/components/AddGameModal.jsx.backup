                          <span className="text-sm font-medium text-white">Se√ßilen DLC'ler</span>
                          <span className="text-lg font-bold text-[#00ff88]">{selectedDlcs.length}</span>
                        </div>
                        <div className="text-xs text-gray-400 mt-1">
                          DLC se√ßildi ve oyunla birlikte eklenecek
                        </div>
                      </div>
                    )}

                    {error && (
                      <div className="p-3 bg-red-500/20 border border-red-500/30 rounded-lg text-red-300 text-sm">
                        {error}
                      </div>
                    )}

                    {/* Ekleme Butonu */}
                    <button
                      onClick={handleAddGame}
                      disabled={isAddingGame || !platform}
                      className="w-full py-3 bg-gradient-to-r from-[#00ff88] to-[#00d4ff] text-black font-bold rounded-lg hover:scale-105 transition-transform disabled:opacity-50 disabled:cursor-not-allowed"
                    >
                      {isAddingGame ? 'üéÆ Ekleniyor...' : 'üéÆ K√ºt√ºphaneye Ekle'}
                    </button>
                  </div>
                </div>
              </div>
            </div>
          )}
        </div>
        
        {/* Campaign Hover Sidebar */}
        {isCampaignMode && (
          <div 
            className="absolute right-0 top-0 h-full"
            onMouseEnter={() => setShowCampaignSidebar(true)}
            onMouseLeave={() => setShowCampaignSidebar(false)}
          >
            {/* Hover Trigger Area */}
            <div className="w-8 h-full bg-transparent cursor-pointer"></div>
            
            {/* Sidebar Content */}
            <div className={`absolute right-0 top-0 h-full w-80 bg-gradient-to-br from-[#2a1f3e] to-[#1a1e37] border-l border-white/20 rounded-r-2xl transform transition-transform duration-300 ${
              showCampaignSidebar ? 'translate-x-0' : 'translate-x-full'
            }`}>
              <div className="p-6 h-full overflow-y-auto">
                <div className="flex items-center gap-3 mb-6">
                  <div className="w-8 h-8 bg-gradient-to-r from-[#00ff88] to-[#00d4ff] rounded-lg flex items-center justify-center">
                    üìã
                  </div>
                  <h3 className="text-lg font-bold text-white">G√ºncel Campaign'ler</h3>
                </div>
                
                {campaigns.length === 0 ? (
                  <div className="text-center py-8">
                    <div className="text-4xl mb-4">üéÆ</div>
                    <p className="text-gray-400">Hen√ºz campaign eklenmemi≈ü</p>
                    <p className="text-gray-500 text-sm mt-2">Sol taraftan campaign ekleyebilirsiniz</p>
                  </div>
                ) : (
                  <div className="space-y-3">
                    {/* Ana Campaign'ler */}
                    {getMainCampaigns().map((campaign) => (
                      <div key={campaign.id} className="space-y-2">
                        {/* Ana Campaign */}
                        <div className="bg-white/5 rounded-lg p-4 border border-white/10 hover:bg-white/10 transition-colors">
                          <div className="flex items-center justify-between mb-2">
                            <div className="flex items-center gap-2">
                              <span className="text-[#00ff88] text-lg">‚≠ê</span>
                              <h4 className="font-semibold text-white text-sm">{campaign.name}</h4>
                              {getSubCampaigns(campaign.id).length > 0 && (
                                <button
                                  onClick={() => {
                                    const newExpanded = new Set(expandedCampaigns)
                                    if (expandedCampaigns.has(campaign.id)) {
                                      newExpanded.delete(campaign.id)
                                    } else {
                                      newExpanded.add(campaign.id)
                                    }
                                    setExpandedCampaigns(newExpanded)
                                  }}
                                  className="text-gray-400 hover:text-white transition-colors"
                                >
                                  {expandedCampaigns.has(campaign.id) ? '‚ñº' : '‚ñ∂'}
                                </button>
                              )}
                            </div>
                          </div>
                          
                          {campaign.averageDuration && (
                            <div className="text-xs text-blue-400 mb-1">
                              ‚è±Ô∏è {campaign.averageDuration}
                            </div>
                          )}
                          
                          {campaign.description && (
                            <p className="text-gray-400 text-xs line-clamp-2">{campaign.description}</p>
                          )}
                          
                          {campaign.customProperties.length > 0 && (
                            <div className="flex flex-wrap gap-1 mt-2">
                              {campaign.customProperties.slice(0, 3).map((prop, index) => (
                                <span key={index} className="px-2 py-1 bg-purple-500/20 text-purple-300 text-xs rounded">
                                  {prop.name}: {prop.value}
                                </span>
                              ))}
                              {campaign.customProperties.length > 3 && (
                                <span className="px-2 py-1 bg-gray-500/20 text-gray-400 text-xs rounded">
                                  +{campaign.customProperties.length - 3}
                                </span>
                              )}
                            </div>
                          )}
                        </div>
                        
                        {/* Alt Campaign'ler */}
                        {expandedCampaigns.has(campaign.id) && getSubCampaigns(campaign.id).map((subCampaign) => (
                          <div key={subCampaign.id} className="ml-6 bg-white/5 rounded-lg p-3 border border-blue-500/20 hover:bg-white/10 transition-colors">
                            <div className="flex items-center gap-2 mb-2">
                              <span className="text-blue-400 text-sm">üîó</span>
                              <h5 className="font-medium text-white text-sm">{subCampaign.name}</h5>
                            </div>
                            
                            {subCampaign.averageDuration && (
                              <div className="text-xs text-blue-400 mb-1">
                                ‚è±Ô∏è {subCampaign.averageDuration}
                              </div>
                            )}
                            
                            {subCampaign.description && (
                              <p className="text-gray-400 text-xs line-clamp-2">{subCampaign.description}</p>
                            )}
                            
                            {subCampaign.customProperties.length > 0 && (
                              <div className="flex flex-wrap gap-1 mt-2">
                                {subCampaign.customProperties.slice(0, 2).map((prop, index) => (
                                  <span key={index} className="px-2 py-1 bg-purple-500/20 text-purple-300 text-xs rounded">
                                    {prop.name}: {prop.value}
                                  </span>
                                ))}
                                {subCampaign.customProperties.length > 2 && (
                                  <span className="px-2 py-1 bg-gray-500/20 text-gray-400 text-xs rounded">
                                    +{subCampaign.customProperties.length - 2}
                                  </span>
                                )}
                              </div>
                            )}
                          </div>
                        ))}
                      </div>
                    ))}
                  </div>
                )}
                
                {/* Quick Stats */}
                {campaigns.length > 0 && (
                  <div className="mt-6 pt-4 border-t border-white/10">
                    <div className="grid grid-cols-2 gap-4 text-center">
                      <div className="bg-white/5 rounded-lg p-3">
                        <div className="text-[#00ff88] font-bold text-lg">{getMainCampaigns().length}</div>
                        <div className="text-gray-400 text-xs">Ana Campaign</div>
                      </div>
                      <div className="bg-white/5 rounded-lg p-3">
                        <div className="text-blue-400 font-bold text-lg">
                          {campaigns.filter(c => c.parentId).length}
                        </div>
                        <div className="text-gray-400 text-xs">Alt Campaign</div>
                      </div>
                    </div>
                  </div>
                )}
              </div>
            </div>
          </div>
        )}
      </div>
    </div>
  ), document.body)
}

export default AddGameModal
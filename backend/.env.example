# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/arkade_db"

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
FRONTEND_URL="http://localhost:3001"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cloudflare R2 Storage
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="arkade-assets"
R2_PUBLIC_URL="https://your-bucket.your-account.r2.cloudflarestorage.com"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-at-least-32-characters-long"
JWT_EXPIRES_IN="24h"
JWT_ISSUER="jun-oro-api"
JWT_AUDIENCE="jun-oro-client"

# Security Settings
BCRYPT_SALT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# Session Management
SESSION_EXPIRE_HOURS=24
SESSION_CLEANUP_INTERVAL_HOURS=1
MAX_SESSIONS_PER_USER=5

# Transaction Settings
TRANSACTION_TIMEOUT_MS=30000
TRANSACTION_RETRY_ATTEMPTS=3
TRANSACTION_RETRY_DELAY_MS=1000
TRANSACTION_BATCH_SIZE=50

# Rate Limiting Enhanced
LOGIN_RATE_LIMIT_MAX=5
LOGIN_RATE_LIMIT_WINDOW_MS=900000
PASSWORD_RESET_RATE_LIMIT_MAX=3
PASSWORD_RESET_WINDOW_MS=3600000

# Monitoring and Logging
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_SECURITY_LOGGING=true
ENABLE_AUDIT_LOGGING=true

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT_MS=30000

# API Security
API_KEY_EXPIRY_HOURS=8760
API_KEY_ROTATION_ENABLED=true

# CORS Security
CORS_ORIGIN_WHITELIST="http://localhost:3001,https://api.jun-oro.com"
CORS_CREDENTIALS=false

# Content Security Policy
CSP_ENABLED=true
CSP_DIRECTIVES="default-src 'self' https://fonts.googleapis.com https://fonts.gstatic.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' https://fonts.gstatic.com https://fonts.gstatic.com;"

# File Upload Security
UPLOAD_MAX_SIZE_MB=10
UPLOAD_ALLOWED_TYPES="jpg,jpeg,png,gif,webp"
UPLOAD_SCAN_VIRUS=true

# Development Settings
ENABLE_DEBUG_LOGS=true
ENABLE_SWAGGER_DOCS=true
ENABLE_PLAYGROUND=true

# Production Settings
ENABLE_HTTPS=true
ENABLE_HELMET=true
ENABLE_COMPRESSION=true
CLUSTER_MODE=false

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true

# Performance Optimization
ENABLE_QUERY_CACHE=true
CACHE_TTL_SECONDS=300
ENABLE_CONNECTION_POOLING=true

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_MAINTENANCE_MODE=false
ENABLE_RATE_LIMITING=true
ENABLE_ADVANCED_LOGGING=false